<body>
  <%- include('../../partials/header.ejs') %>
    <main>
      <section class="produtos">
        <div class="container">
          <h1>Cadastrar novo Produto</h1>
          <form method="POST" action="/adm/produto/cadastro" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="" class="form-label">Imagem</label>
              <input type="file" name="imagem" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Nome</label>
              <input type="text" name="nome" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Cor</label>
              <input type="text" name="cor" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Preço</label>
              <input type="number" name="preco" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">estoque</label>
              <input type="number" name="estoque" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Tamanho</label>
              <input type="text" name="tamanho" class="form-control" required>
            </div>
            <select class="form-select mb-3" name="categoria">
              <option selected>Escolha uma categoria</option>
              <% for(let categoria of categorias) {%>
                <option value="<%=categoria.id%>">
                  <%=categoria.nome_categoria%>
                </option>
                <%}%>
            </select>

            <div class="mb-3">
              <textarea name="descricao" class="form-control" cols="15" rows="5"
                placeholder="Descrição do produto"></textarea>
            </div>
